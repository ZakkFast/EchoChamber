
<div class="row m-5-top card-panel teal lighten-2">
  <div
    class="col s12 border-grey corner-med charter grey-text text-lighten-2 p-1 center-align"
  >
    <h3 class="roboto three zero">Popular Posts</h3>
  </div>
</div>

{{!-- Loop over each object in the comments array --}}
{{#each posts as |post|}}
<div class="col s12 m7">
  <div class="card horizontal">
    <div class="card-panel grey post-bar">
      <button class="btn-flat waves-effect waves-light">
        <i class="small material-icons">arrow_upward</i>
      </button>
      <h5>1.2k</h5>
      <button class="btn-flat waves-effect waves-light">
        <i class="small material-icons">arrow_downward</i>
      </button>
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <p>Created by {{post.user.user_name}} on {{format_date post.date_created}}</p>
        <h2><a href="/post/{{post_id}}">{{post_title}}</a></h2>
        <p>{{post_content}}</p>
      </div>
      <div class="card-action valign-wrapper">
        <i class="small material-icons icon">Comments</i><a
          href="/post/{{post_id}}"
          class="comments"
        >{{comment_text}}</a>
      </div>
    </div>
  </div>
</div>
{{/each}}